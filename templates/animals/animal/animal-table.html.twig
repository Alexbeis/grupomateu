<div class="table-responsive">
    <table id="animal-table" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th>Crotal</th>
            <th>#Interno</th>
            <th>Nacimiento</th>
            <th>Edad(meses)</th>
            <th>Edad(dias)</th>
            <th>Explotación</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td>{{ animal.crotal }}</td>
                <td>{{ animal.internalnum }}</td>
                <td>{{ animal.birthdate|date('d-m-y') }}</td>
                <td>{{ animal.birthdate|calculateMonths }}</td>
                <td>{{ animal.birthdate|calculateDays }}</td>
                <td>{{ animal.explotation.name }}</td>
                <td>
                    <div
                        class="label label-{{ animal.isill ? 'danger' : 'success' }}">
                        {%  if animal.isill %}
                            Enfermo
                        {% else %}
                            Sano
                        {% endif %}
                    </div>
                </td>
                <td>
                    <a class="btn btn-default" href="{{ path('edit_animal', {'id':animal.id}) }}#ficha">Ver/editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Crotal</th>
            <th>#Interno</th>
            <th>Nacimiento</th>
            <th>Edad(meses)</th>
            <th>Edad(dias)</th>
            <th>Explotación</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
        </tfoot>
    </table>
</div>