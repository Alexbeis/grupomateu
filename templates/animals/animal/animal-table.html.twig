<div class="table-responsive">
    <table id="animal-table" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th></th>
            <th>Crotal</th>
            <th>Número interno</th>
            <th>Edad</th>
            <th>Edad(meses)</th>
            <th>Explotación</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td></td>
                <td>{{ animal.crotal }}</td>
                <td>{{ animal.internalnum }}</td>
                <td>{{ animal.birthdate|date('d-m-y') }}</td>
                <td>{{ animal.birthdate|calculateMonths }}</td>
                <td>{{ animal.explotation.name }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('edit_animal', {'id':animal.id}) }}#ficha">Ver/editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th></th>
            <th>Crotal</th>
            <th>Número interno</th>
            <th>Edad</th>
            <th>Edad(meses)</th>
            <th>Explotación</th>
            <th>Acciones</th>
        </tr>
        </tfoot>
    </table>
</div>