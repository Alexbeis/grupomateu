<table id="history-table" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Comentario</th>
        <th>Creado por</th>
        <th>Creado el</th>
    </tr>
    </thead>
    <tbody>
    {% for history in animal.history %}
        <tr>
            <td>{{ history.comment }}</td>
            <td>{{ history.createdBy.username }}</td>
            <td>{{ history.createdAt|date('d-m-Y') }}</td>
        </tr>
    {% else %}
        <tr>
            <td>
                <em>no history found</em>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>Comentario</th>
        <th>Creado por</th>
        <th>Creado el</th>
    </tr>
    </tfoot>
</table>