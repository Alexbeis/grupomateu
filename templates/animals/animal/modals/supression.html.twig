<div class="modal fade" id="modal-supression" style="display: none;">
    <div class="modal-dialog">
        <form role="form" id="supression-form" method="post" action="{{ path('animal_supression') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Generación Supresión</h4>
                </div>
                <div class="modal-body">
                    <div class="box-body">
                            <input type="hidden" value="{{ animal.id }}" name="sup_animal">
                            <div class="col-xs-12 form-group">
                                <label for="">Producto</label>
                                <input class="form-control required" type="text" name="sup_product">
                                <span class="help-block hidden"></span>
                            </div>

                            <div class="form-group col-md-6 js-supresion ">
                                <label for="sup_date">Fecha Inicio Supresion</label>
                                <input type="date"
                                       class="form-control required"
                                       id="sup_date"
                                       name="sup_date"
                                       value="">
                                <span class="help-block hidden"></span>
                            </div>
                            <div class="form-group col-xs-12 col-md-4 js-supresion ">
                                <label for="">Periodo(dias)</label>
                                <input class="form-control required" type="number" name="sup_days">
                                <span class="help-block hidden"></span>
                            </div>
                    <!-- /.box-body -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary js-generate-supression">
                        Guardar
                        <span class="js-spinner">
                            <i class="fa fa-spinner fa-spin hidden"></i>
                        </span>
                    </button>
                </div>
            </div> <!-- /.modal-content -->
        <!-- /. form -->
        </form>
    </div>
    <!-- /.modal-dialog -->
</div>