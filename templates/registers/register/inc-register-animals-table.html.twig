<div class="table-responsive">
    <table id="inc-register-animal-table" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th>Crotal</th>
            <th>Número interno</th>
            <th>Crotal Madre</th>
            <th>Peso Entrada</th>
            <th>Edad</th>
            <th>Edad(meses)</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for animal in incomingRegister.animals %}
            <tr>
                <td>{{ animal.crotal }}</td>
                <td>{{ animal.internalnum }}</td>
                <td>{{ animal.crotalMother }}</td>
                <td>{{ animal.weightIn }}</td>
                <td>{{ animal.birthdate|date('d-m-Y') }}</td>
                <td>{{ animal.birthdate|calculateMonths }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('edit_animal', {'id':animal.id}) }}#sheet">Ver/editar</a>
                    <a class="btn btn-default js-remove-inc-register-animal"
                       href="{{ path('register_delete_crotal')}}"
                        data-id="{{ animal.id }}"
                        data-increg="{{ incomingRegister.id }}"
                    >
                        <i class="fas fa-trash"></i>
                        <span class="js-spinner">
                            <i class="fa fa-spinner fa-spin hidden"></i>
                        </span>
                    </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Crotal</th>
            <th>Número interno</th>
            <th>Crotal Madre</th>
            <th>Peso Entrada</th>
            <th>Edad</th>
            <th>Edad(meses)</th>
            <th>Acciones</th>
        </tr>
        </tfoot>
    </table>
</div>