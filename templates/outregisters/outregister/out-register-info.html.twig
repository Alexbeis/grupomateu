<form role="form" id="add-out-register-form" method="post" action="{{ path('out_register_save') }}">
    <input type='hidden' name='_method' value='PUT'>
    <input type="hidden" name="out_reg_uuid" value="{{ outregister.uuid }}">
    <input type="hidden" name="out_reg_id" value="{{ outregister.id }}">
    <div class="box-body">
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    <label for="out_reg_type">Tipo</label>
                    <select id="out_reg_type" class="js-out_type form-control editable" name="out_reg_type" disabled>
                        <option value=""></option>
                        {% for type in outTypes %}
                            <option value="{{type.id}}"
                                    {% if outregister.outType and outregister.outType.id == type.id %} selected {% endif %}
                            >
                                {{ type.name }}
                            </option>
                        {% endfor %}
                    </select>
                    <span class="help-block hidden"></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                {% if not outregister.explotation %}
                <div class="form-group hidden">
                    <label for="out_reg_exp">Explotación</label>
                    <select id="single" class="js-out-expl form-control editable" name="out_reg_exp" disabled>
                        <option value=""></option>
                        {% for explotation in explotations %}
                            <option value="{{explotation.id}}"
                                    {% if outregister.explotation and outregister.explotation.id == explotation.id %} selected {% endif %}
                            >
                                {{ explotation.name }}
                            </option>
                        {% endfor %}
                    </select>
                    <span class="help-block hidden"></span>
                </div>
                {% endif %}
            </div>

        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    <label for="out_reg_dest">Destino</label>
                    <select class="form-control editable" id="out_reg_dest" name="out_reg_dest" disabled>
                        <option value=""></option>
                        {% for code ,country in countries %}
                            <option value="{{code}}"
                                    {% if code == outregister.destination %} selected {% endif %}
                            >
                                {{ country }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

            </div>
            <div class="form-group">
                <div class="col-xs-12 col-sm-6">
                    <label for="out_reg_purchaser">Comprador</label>
                    <select class="form-control editable" id="out_reg_purchaser" name="out_reg_purchaser" disabled>
                        <option value=""></option>
                        {#{% for supplier in suppliers %}
                            <option value="{{ supplier.id }}"
                                    {% if incomingRegister.supplier.id == supplier.id %} selected {% endif %}
                            >{{ supplier.companyName}}
                            </option>
                        {% endfor %}#}
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    <label for="out_reg_guide_num">Número de guia</label>
                    <input type="text"
                           id="out_reg_guide_num"
                           class="form-control editable"
                           name="out_reg_guide_num"
                           value="{{ outregister.outGuide }}"
                           disabled
                    >

                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    <label for="out_reg_guide_date">Fecha guia</label>
                    <input type="date" class="form-control editable" name="out_reg_guide_date" value="{{ outregister.outDate ? outregister.outDate|date('Y-m-d') }}"
                    disabled>
                </div>
            </div>

        </div>
        <div class="">
            <a href="{{ path('index_outregisters') }}"><button type="button" class="btn btn-default pull-left">Cerrar</button></a>
            <button
                    type="submit"
                    class="btn btn-primary pull-right js-save-out-register">
                Guardar
                <span class="js-spinner">

                </span>
            </button>
            <button class="btn btn-primary pull-right js-edit-out-register">Edit</button>
        </div>
    </div>
    <!-- /.box-body -->
</form>