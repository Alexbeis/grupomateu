<div class="container">
    <div class="row">
        <div class="col-xs-2">
            <div class="form-group">
                <label for="scanner">Min Edad (meses):</label>
                <input type="number" class="form-control" id="min_old">
            </div>
        </div>
        <div class="col-xs-2">
            <div class="form-group">
                <label for="scanner">Max Edad (meses):</label>
                <input type="number" class="form-control" id="max_old">
            </div>
        </div>
    </div>
</div>

<table id="exp-animal-table" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th></th>
        <th>Crotal</th>
        <th>Número interno</th>
        <th>Edad</th>
        <th>Edad(meses)</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for animal in explotation.animal %}
        <tr>
            <td></td>
            <td>{{ animal.crotal }}</td>
            <td>{{ animal.internalnum }}</td>
            <td>{{ animal.birthdate|date('d-m-y') }}</td>
            <td>{{ animal.birthdate|date('m') }} </td>
            <td>
                {% set isAnnexed = animal.annex %}

                <div class="btn-group">
                    {% if isAnnexed %}
                        <a href="#"
                           type="button"
                           class="btn btn-warning js-annex-animal"
                            data-annexed="{{ isAnnexed ? '1':'0' }}"
                            data-id="{{ animal.id }}">
                            Quitar
                        </a>
                    {% else %}
                        <a href="#"
                           type="button"
                           class="btn btn-default js-annex-animal"
                           data-annexed="{{ isAnnexed ? '1': '0' }}"
                           data-id="{{ animal.id }}">
                            Annexar
                        </a>
                    {% endif %}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th></th>
        <th>Crotal</th>
        <th>Número interno</th>
        <th>Edad</th>
        <th>Edad(meses)</th>
        <th>Acciones</th>
    </tr>
    </tfoot>
</table>