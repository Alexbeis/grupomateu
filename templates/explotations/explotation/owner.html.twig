<div class="col-xs-12 col-sm-6 col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4>Propietario</h4>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" action="{{ path('save_owner') }}" method="POST" id="owner_save_form">
            <div class="box-body">
                <div class="form-group col-xs-6">
                    <label for="owner_name">Nombre</label>
                    <input type="text"
                           class="form-control editable"
                           id="owner_name"
                           placeholder="ex. Trillo"
                           name="owner_name"
                           value="{{ explotation.owner.name|default('') }}" disabled>
                    <span class="help-block hidden"></span>
                </div>
                <div class="form-group col-xs-6">
                    <label for="owner_code">CÃ³digo</label>
                    <input type="text"
                           class="form-control editable"
                           id="owner_code"
                           placeholder="ej: EXP_XXXXXX"
                           name="owner_code"
                           value="{{ explotation.owner.code|default('')  }}" disabled>
                    <span class="help-block hidden"></span>
                </div>
                <div class="form-group col-xs-12">
                    <label for="owner_nif">Nif</label>
                    <input type="text"
                           class="form-control editable"
                           id="owner_nif"
                           placeholder="ej: 787298374923843"
                           name="owner_nif"
                           value="{{ explotation.owner.nif|default('')  }}" disabled>
                    <span class="help-block hidden"></span>
                </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <input type="hidden"
                       value="{{ explotation.id }}"
                       name="exp_id"
                >
                <button type="submit"
                        class="btn btn-primary pull-right js-save-owner">
                    Guardar
                </button>
                <button type="button"
                        data-type="owner"
                        class="btn btn-primary pull-right js-edit-owner-exp">
                    Editar
                </button>
            </div>
        </form>
    </div>
    <!-- /.box -->
</div>