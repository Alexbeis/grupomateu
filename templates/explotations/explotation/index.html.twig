{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>Explotación <small>Editar</small></h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('index_explotations') }}"><i class="fa fa-dashboard"></i> Explotaciones</a></li>
            <li class="active">Explotacion</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action="{{ path('save_explotation') }}" method="POST" id="expl_save_form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exp_name">Nombre</label>
                                <input type="text"
                                       class="form-control"
                                       id="exp_name"
                                       placeholder="ex. Trillo"
                                       name="exp_name"
                                        value="{{ explotation.name }}">
                                <span class="help-block hidden"></span>
                            </div>
                            <div class="form-group">
                                <label for="exp_code">Código</label>
                                <input type="text"
                                       class="form-control"
                                       id="exp_code"
                                       placeholder="ej: EXP_XXXXXX"
                                       name="exp_code"
                                        value="{{ explotation.code }}">
                                <span class="help-block hidden"></span>
                            </div>
                            <div class="form-group">
                                <label for="exp_loca">Localización</label>
                                <input type="text"
                                       class="form-control"
                                       id="exp_loca"
                                       placeholder="ej: 787298374923843"
                                       name="exp_loca"
                                       value="{{ explotation.localization }}">
                                <span class="help-block hidden"></span>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="hidden"
                                   value="{{ explotation.id }}"
                                   name="exp_id"
                                    >
                            <button type="submit" class="btn btn-primary pull-right js-save-explotation">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <div class="col-md-6">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Animals</h3>
                    </div>
                    <div class="box-body">
                        {% include 'explotations/explotation/animals.html.twig' %}
                    </div>
                </div>
            </div>
        </div>

    </section>

{% endblock %}